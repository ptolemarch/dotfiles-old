[user]
	name = David Hand
	email = davidhand@davidhand.com
# use default of ~/config/git/ignore instead
#[core]
#	excludesfile = ~/.gitignore
[color]
	ui = auto
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	showbranch = auto
	status = auto
[color "diff"]
	meta = black white
[push]
	default = current
[alias]
	ustatus = status --untracked-files=normal
	unstage = reset --
	release = ! git tag release-`date +%Y%m%d%H%M` && git push --tags

[core]
	pager = less -F -X
[grep]
	extendRegexp = true
	lineNumber = true
[diff]
[difftool]
	prompt = false
